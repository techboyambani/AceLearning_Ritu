<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.acelearning.updquessub"
    android:orientation="vertical"
    android:background="@drawable/forgot">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/typ"
        android:layout_marginTop="30dp"/>
    <Spinner
        android:id="@+id/sp_typeQ"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="175dp"
        android:background="@color/whit"
        android:backgroundTint="@android:color/white"
        android:spinnerMode="dropdown"/>


    </LinearLayout>
    <EditText
        android:id="@+id/ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Question Here"
        android:textCursorDrawable="@drawable/color_cursor"
        android:background="@drawable/blank"
        android:textColorHint="@android:color/black"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/insert"
        android:onClick="insertques"
        android:layout_width="311dp"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/insert"/>
    <Button
        android:id="@+id/back"
        android:onClick="backtohome"
        android:layout_width="311dp"
        android:layout_height="34dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"/>

</LinearLayout>
